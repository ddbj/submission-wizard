{
  "$schema": "https://raw.githubusercontent.com/lit/lit/main/packages/localize-tools/config.schema.json",
  "sourceLocale": "en",
  "targetLocales": ["ja"],
  "tsConfig": "./tsconfig.json",
  "output": {
    "mode": "runtime",
    "outputDir": "./app/generated/locales",
    "localeCodesModule": "./app/generated/locales.ts"
  },
  "interchange": {
    "format": "xliff",
    "xliffDir": "./xliff"
  }
}
